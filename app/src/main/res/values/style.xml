<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/RoundedButtonShapeAppearance</item>
        <item name="android:textColor">@color/purple_background</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/purple_background</item>
    </style>

    <style name="RegisterButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/RoundedButtonShapeAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="RegisterButtonAction" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/purple_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.CornerSize50" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="PurpleButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/RoundedButtonShapeAppearance</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">@color/purple_background</item>
    </style>

    <style name="RoundedButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="RoundedButton.Disabled" parent="RoundedButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/disabled_button_color</item>
    </style>
    <style name="ToolbarTitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">40sp</item> <!-- Adjust the desired text size -->
        <item name="android:textColor">@color/black</item> <!-- Adjust the desired text color -->
    </style>

</resources>