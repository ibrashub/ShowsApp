<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/verificationNavGraph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="infinuma.android.shows.ui.login.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action android:id="@+id/action_loginFragment_to_showsFragment"
            app:destination="@id/showsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/showsFragment"
        android:name="infinuma.android.shows.ui.login.ShowsFragment"
        tools:layout="@layout/fragment_shows">

        <action android:id="@+id/action_showsFragment_to_showDetailsFragment"
            app:destination="@id/showDetailsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/showDetailsFragment"
        android:name="infinuma.android.shows.ui.login.ShowDetailsFragment"
        tools:layout="@layout/fragment_show_details">
        <argument
            android:name="showName"
            app:argType="string"
            android:defaultValue="Name" />
        <argument
            android:name="showId"
            app:argType="integer"
            android:defaultValue="1" />
        <argument
            android:name="showDescription"
            app:argType="string"
            android:defaultValue="Description" />
        <argument
            android:name="showImage"
            app:argType="integer"
            android:defaultValue="0" />

        <!--        <action-->
        <!--            android:id="@+id/to_fragment_shows"-->
        <!--            app:destination="@+id/fragment_shows"/>-->
    </fragment>

</navigation>
